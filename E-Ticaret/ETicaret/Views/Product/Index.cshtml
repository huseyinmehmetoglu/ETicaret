@model IEnumerable<ETicaret.Models.Product>
@{
    ViewData["Title"] = "Ürün Listesi";
}
<div class="container mt-3">
    <h2>Ürün Listesi</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
    </p>
    <table class="table">
        <thead>     
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info">Detay</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
