@model ETicaret.Models.Product
@{
    ViewData["Title"] = "Ürün Sil";
}
<div class="container">
    <h2 class="mt-3">Ürün Sil</h2>
    <p class="mt-3">Bu ürünü silmek istediğinize emin misiniz?</p>
    <div class="mt-3">
        <dl class="row">
            <dt class="col-sm-2">Ürün Adı:</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Fiyat:</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Kategori:</dt>
            <dd class="col-sm-10">@Model.Category?.Name</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
